<div class="page_block ">
    <div class="hero">
        {{>hero title=hero.title text=hero.text}}
        <a class="button" href="{{hero.button.url}}">{{hero.button.text}}</a>
    </div>
</div>

<div class="page_block ">
    <div class="row g-4">
        {{#each preview}}
        <div class="col-6">
            {{> card_preview}}
        </div>
        {{/each}}
    </div>
</div>

<div class="page_block ">
    <main class="main_posts">
        <div class="row g-0">
            <div class=" col-12 list_header">
                <div class="row ">
                    <div class="col-6">
                        <h2 class="list-title">List of posts</h2>
                    </div>
                    <div class="col-6 category">
                        {{#each categories}}
                        <button class="category_button">
                            {{text}}
                        </button>
                        {{/each}}
                    </div>
                </div>
            </div>


            <div class="col-7 list">
                {{#each news}}
                {{>card_post}}
                {{/each}}
            </div>

            <aside class="col-5 list_aside">
                <div class="about">
                    <h4 class="about_title">About</h4>
                    <p class="about_description">{{about}}</p>
                </div>
                <div class="link_list">
                    <h4 class="aside_title">Archives</h4>
                    {{#each archive}}
                    {{>linkList}}
                    {{/each}}
                </div>
                <div class="link_list">
                    <h4 class="aside_title">Social</h4>
                    {{#each social}}
                    {{>linkList}}
                    {{/each}}
                </div>
            </aside>
        </div>
    </main>
</div>