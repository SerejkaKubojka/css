{{#with hero}}
<div class="hero_3">
    <div class="hero_3_content">
        <h1 class="hero_3_title">{{title}}</h1>
        <p class="hero_3_text">{{text}}</p>
    </div>
    <img src="{{photo}}" alt="Hero image" class="hero_3_photo">
</div>
{{/with}}

<main class="blog">
    {{#each blog}}
    <div class="blog_card">
        <div class="blog_card_image" style="background-image: url({{img}});"></div>
        <h2 class="blog_card_title">{{title}}</h2>
        <p class="blog_card_text">{{text}}</p>
        <a href="{{href}}" class="blog_card_button">{{button}}</a>
    </div>
    {{/each}}
</main>

<hr>

{{#with form}}
<div class="form">
    <div class="form_content">
        <h3 class="form_title">{{title}}</h3>
        <p class="form_info">{{info}}</p>
    </div>
    <a href="{{href}}" class="form_button button">{{button}}</a>
</div>
{{/with}}