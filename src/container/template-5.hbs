<main class="main">
    {{#with messages}}
    <div class="messages">
        <h1 class="messages_title">{{title}}</h1>
        {{#each list}}
        <div class="msg">
            <strong class="msg_name">{{name}}</strong>
            <p class="msg_text">{{message}}</p>
            <span class="msg_day">{{day}}</span>
        </div>
        {{/each}}
        <a href="#" class="messages_link">All messages</a>
    </div>
    {{/with}}
    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>
        <div class="form_inut_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" id="{{id}}" name="{{name}}" class="form_input">
            {{/each}}
        </div>
        <div class="form_checkbox">

            <input type="checkbox" class="" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="button form_button2">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

<div class="advantages">
    {{#each advantages}}
    <div>
        <strong class="">{{title}}</strong>
        <p class="">{{text}}</p>
    </div>
    {{/each}}
</div>