<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>

        <p class="info_text">{{description}}</p>
    </div>
    {{/with}}



    {{#with form}}
    <form class="form">

        <div class="form_inut_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" id="{{id}}" name="{{name}}" class="form_input">
            {{/each}}
        </div>
        <div class="form_checkbox">

            <input type="checkbox" class="" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="button form_button2">{{button}}</button>
        <hr>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

{{#with updates}}
<div class="updates">
    <h1 class="updates_title">{{title}}</h1>
    {{#each list}}
    <div class="list_upd">
        <div class="upd_image" style="background: {{color}};">32x32</div>
        <div class="udp">
            <strong class="upd_name">@{{nickname}}</strong>
            <p class="upd_text">{{description}}</p>
        </div>

    </div>
    {{/each}}
    <a href="#" class="upd_link">All messages</a>
</div>
{{/with}}
{{#with expirience}}
<div class="exp">
    <h1 class="expirience_title">{{title}}</h1>
    <div class="expirience_list">
        {{#each list}}
        <div>
            <strong class="">{{name}}</strong>
            <p class="">{{details}}</p>
        </div>
        {{/each}}
    </div>
    <span class="expirience_badge">{{badge}}</span>
</div>
{{/with}}