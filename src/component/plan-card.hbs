<div class="card">
    <div class="card-header">
        {{name}}
    </div>
    <div class="card-body">
        <div class="card-price">
            <span class="card-price-amont">
                ${{price}}
            </span>
            <span class="card-price-duration">
                / mo
            </span>
        </div>
        <div class="card-features">
            {{#each features}}
            <div class="card-features-item">
                {{this}}
            </div>
            {{/each}}
        </div>
        <button class="btn btn-{{#if @first}}outline-{{/if}}primary card-button">
            {{button}}
        </button>
    </div>
</div>