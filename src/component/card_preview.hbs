<div class="preview">
    <div class="preview-header">
        <span class="preview-date">{{date}}</span>
        {{#each category}}
        <span class="preview-category_{{id}}">{{text}}</span>
        {{/each}}
    </div>
    <strong class="preview-title">{{title}}</strong>
    <p class="preview-description">{{text}}</p>
    <a class="" href="">Continue reading</a>
</div>